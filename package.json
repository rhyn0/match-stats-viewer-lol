{
    "name": "match-stats-viewer-lol",
    "version": "1.0.0",
    "description": "Fullstack ReactJS application for viewing statistics for a local LoL tournament.",
    "type": "module",
    "scripts": {
        "dev": "vinxi dev",
        "build": "vinxi build",
        "start": "vinxi start",
        "prepare": "husky",
        "lint": "npm run lint:biome",
        "lint:types": "tsc --noEmit",
        "lint:biome": "pnpx biome check --error-on-warnings ./",
        "format": "pnpx biome format --write ",
        "pre-commit": "pnpm lint && pnpm test",
        "generate": "drizzle-kit generate:sqlite",
        "push": "drizzle-kit push:sqlite",
        "studio": "drizzle-kit studio --port 3001 --verbose",
        "fix": "npm run fix:format && npm run fix:lint",
        "fix:biome": "npx biome check --write ./",
        "test": "echo 'todo item'"
    },
    "keywords": [],
    "author": "Ryan Ozawa<ryan.ozawa21@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "@radix-ui/react-dropdown-menu": "^2.1.4",
        "@radix-ui/react-slot": "^1.1.1",
        "@tailwindcss/vite": "4.0.0-beta.9",
        "@tanstack/react-query": "^5.64.1",
        "@tanstack/react-query-devtools": "^5.64.1",
        "@tanstack/react-router": "1.97.1",
        "@tanstack/react-router-with-query": "^1.97.1",
        "@tanstack/router-devtools": "^1.97.1",
        "@tanstack/start": "1.97.2",
        "class-variance-authority": "0.7.1",
        "clsx": "2.1.1",
        "lucide-react": "0.473.0",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "tailwind-merge": "2.6.0",
        "tailwindcss": "4.0.0-beta.9",
        "tailwindcss-animate": "1.0.7",
        "vinxi": "0.5.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@types/node": "^22.10.7",
        "@types/react": "^19.0.7",
        "@types/react-dom": "^19.0.3",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-istanbul": "^3.0.2",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.1",
        "typescript": "^5.7.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.0.2"
    },
    "lint-staged": {
        "*.+(ts|tsx)": [
            "pnpm run lint",
            "bash -c 'pnpm run lint:types'"
        ],
        "*.test.+(ts|tsx)": [
            "pnpm test"
        ],
        "*.json": "pnpm run format"
    }
}
