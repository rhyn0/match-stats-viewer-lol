{
    "compilerOptions": {
        "jsx": "react-jsx",
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "target": "ES2022",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./app/*"]
        },
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "noEmit": true,
        "exactOptionalPropertyTypes": true
    },
    "include": [
        "app/**/*.ts",
        "app/**/*.tsx",
        "drizzle.config.ts",
        "testing/**/*.ts",
        "scripts/*.ts",
        "testing/**/*.tsx"
    ]
}
