{
    "prettier.enable": false,
    "biome.enabled": true,
    "biome.lspBin": "./node_modules/.bin/biome",
    "[javascript]": {
        "editor.maxTokenizationLineLength": 2500,
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome",
        "editor.quickSuggestions": {
            "other": "on",
            "comments": "off",
            "strings": true
        }
    },
    "typescript.preferences.quoteStyle": "double",
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "editor.defaultFormatter": "biomejs.biome"
    },
    // testing in vscode
    // easiest to cmd+shift+p and Test: Start Continuous Run
    "testing.alwaysRevealTestOnStateChange": true,
    "testing.automaticallyOpenPeekViewDuringAutoRun": true,
    "testing.automaticallyOpenPeekView": "failureInVisibleDocument",
    "testing.openTesting": "openOnTestFailure",
    // editor view settings
    "editor.defaultFormatter": "biomejs.biome",
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "inlineFold.regex": "(class|className)=[`'{\"]([^`'\"}]{30,})[`'\"}]",
    "inlineFold.maskChar": "‚å®",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/Thumbs.db": true
    },
    "editor.codeActionsOnSave": {
        "quickfix.biome": "explicit"
    },
    "testing.automaticallyOpenTestResults": "openOnTestFailure",
    "tailwindCSS.classAttributes": [
        "class",
        "className",
    ],
    "tailwindCSS.experimental.classRegex": [
        [
            "\\b\\w+[cC]lassName\\s*=\\s*[\"']([^\"']*)[\"']"
        ],
        [
            "\\b\\w+[cC]lassName\\s*=\\s*`([^`]*)`"
        ],
        [
            "[\\w]+[cC]lassName[\"']?\\s*:\\s*[\"']([^\"']*)[\"']"
        ],
        [
            "[\\w]+[cC]lassName[\"']?\\s*:\\s*`([^`]*)`"
        ],
        // https://cva.style/docs/getting-started/installation
        [
            "cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"
        ],
        [
            "cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"
        ]
    ],
    // suggested by arktype
    // allow autocomplete for ArkType expressions like "string | num"
    "editor.quickSuggestions": {
        "strings": "on"
    },
    // prioritize ArkType's "type" for autoimports
    "typescript.preferences.autoImportSpecifierExcludeRegexes": [
        "^(node:)?os$"
    ],
}
